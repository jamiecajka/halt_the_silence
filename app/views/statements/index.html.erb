<section class="has-text-centered has-background-warning">
  <br>
  <div class="dropdown is-hoverable  has-background-warning">
    <div class="dropdown-trigger">
      <button class="button has-text-white" aria-haspopup="true" aria-controls="dropdown-menu">
        <span>Language</span>
        <span class="icon is-small">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
    </div>
    <div class="dropdown-menu" id="dropdown-menu" role="menu">
      <div class="dropdown-content">
        <a onclick="englishFunction()" class="dropdown-item has-text-white">
          English
        </a>
        <a onclick="spanishFunction()" class="dropdown-item has-text-white">
          Spanish
        </a>
      </div>
    </div>
  </div>
</section>

<div style="display: block;" id="english">
  <section class="section has-background-warning">
    <div class="container">
      <h1 class="title has-text-white"><%= @statements.find(1).body %></h1>
      <div class="block">
        <h2 class="subtitle has-text-white"><%= @statements.find(2).body %></h2>
      </div>
      <div class="block">
        <h2 class="subtitle has-text-white"><%= @statements.find(3).body %></h2>
      </div>
    </div>
  </section>
  <section class="section">
    <div class="columns">
      <div class="column">
        <figure class="image is-16by9">
          <iframe class="has-ratio" width="560" height="315" src="https://www.youtube.com/embed/SzWextLjK9k" frameborder="0" allowfullscreen></iframe>
        </figure>
      </div>
      <div class="column">
        <h2 class="subtitle is-size-4"><%= @statements.find(4).body %></h2>
        <h2 class="subtitle is-size-4"><%= @statements.find(5).body %></h2>
      </div>
    </div>
  </section>
  <section class="section has-background-warning">
    <div class="container">
      <% @statements.each do |s| %>
        <% if s.id.between?(6, 8)  %>
          <h2 class="subtitle has-text-white"><%= s.body %></h2>
          <br>
          <br>
        <% end %>
      <% end %>
    </div>
  </section>
</div>

