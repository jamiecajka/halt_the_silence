<div class="front-page">
  <div style="display: block;" id="english">
    <div class="text_block_one">
      <div class="text_block">
        <% @statements.each do |s| %>
          <% if s.language == 'english' && s.ordinal == 1 %>
            <%= s.body %>
            <br>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="video">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/SzWextLjK9k" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="text_block_one">
      <div class="text_block">
        <% @statements.each do |t| %>
          <% if t.language == 'english' && t.ordinal == 2 %>
            <h2><%= t.header %></h2>
            <%= t.body %>
            <br>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div style="display: none;" id="spanish">
    <div class="text_block_one">
      <div class="text_block">
        <% @statements.each do |s| %>
          <% if s.language == 'spanish' && s.ordinal == 1 %>
            <%= s.body %>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="video">
      <<iframe width="560" height="315" src="https://www.youtube.com/embed/ond-dL6ToVY" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="text_block_one">
      <div class="text_block">
        <% @statements.each do |t| %>
          <% if t.language == 'spanish' && t.ordinal == 2 %>
            <%= t.body %>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
