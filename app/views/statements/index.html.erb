<script type="text/javascript">
  function spanishFunction() {
    var e = document.getElementById("english");
    var s = document.getElementById("spanish");
    if (e.style.display === "block" && s.style.display === "none") {
      e.style.display = "none";
      s.style.display = "block"
    }
  }
  function englishFunction() {
    var e = document.getElementById("english");
    var s = document.getElementById("spanish");
    if (s.style.display === "block" && e.style.display === "none") {
      s.style.display = "none";
      e.style.display = "block"
    }
  }
</script>
