<div class="page">
  <h2><%= @article.title %></h2>
  <img class="article_picture" <%= image_tag (@article.picture.url) %>
  <h3><%= @article.author %></h3>
  <% if @article.url != '' %>
    <h3><%= @article.url %></h3>
  <% end %>
  <p><%= simple_format @article.body %></p>
  <% if current_user.admin? %>
    <%= link_to edit_article_path do  %>
      <i class="far fa-edit fa-2x"></i>
    <% end %>
    <%= link_to article_path, data: { confirm: "Are you sure?" }, method: :delete do %>
      <i class="far fa-trash-alt fa-2x"></i>
    <% end %>
  <% end %>
</div>
