<div class="front-page">
  <div class="text_block">
    <% @profiles.each do |f| %>
        <h4><%= f.text_one %></h4>
        <h4><%= f.text_two %></h4>
        <button onclick="myFunction()">English/Spanish</button>
        <div style="display: block;" id="english">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/SzWextLjK9k" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div style="display: none;" id="spanish">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/ond-dL6ToVY" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <h4><%= f.text_three %><a href="https://luxshine.tumblr.com/post/635890005693333504/y-yo-a-ti-cas-segunda-parte-because-of-course">  Professional translators weigh in on the controversy and disagree with the official story</a></h4>
        <h4><%= f.text_four %></h4>
        <h4><%= f.text_five %></h4>
        <h4><%= f.text_six %></h4>
    <% end %>
  </div>
  <div class="to_do_list">
    <h2 class="to_do_header">5 Steps You Can Take</h2>
    <ul>
      <% @steps.each do |s| %>
        <li><%= s.text %></li>
      <% end %>
    </ul>
  </div>
  <h4>More info coming soon</h4>
</div>

<script type="text/javascript">
  function myFunction() {
    var e = document.getElementById("english");
    var s = document.getElementById("spanish");
    if (e.style.display === "block" && s.style.display === "none") {
      e.style.display = "none";
      s.style.display = "block"
    } else {
      s.style.display = "none";
      e.style.display = "block"
    }
  }
</script>
